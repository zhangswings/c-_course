#include<iostream>
#include<string>
#include<cmath>
#define ZERO 0
#include<climits>
using namespace std;

struct Point
{
	int *x;
	int *y;
};
void move(Point& q){
	--*q.x;
	++*q.y;
		
}
void simon(int x){
	using namespace std;
	cout << "您输入的是： " << x << endl;
}
